<h1>Listing authors</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    
  </tr>

<%= link_to 'Click Here to Add a New Author', new_author_path %>

<% @authors.each do |author| %>
  <tr>
    <td><%= link_to author.name, author %></td>
    
  </tr>
<% end %>
</table>

